name=mpfr
from_source=mpfr
revision=1
imagedeps="gcc"
hostdeps="gcc autoconf autoconf-archive automake libtool pkg-config"
deps="mlibc gmp"

build() {
    cp -r "${source_dir}"/. ./
    libtoolize -cfvi && autoreconf -fvi

    ./configure \
        --host=x86_64-vinix \
        --prefix=${prefix} \
        --enable-static=no \
        --enable-shared=yes \
        --with-pic

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
