name=libsm
from_source=libsm
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-util-macros xorg-proto libx11 libxtrans libice"

build() {
    ${source_dir}/configure           \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var          \
        --disable-static

}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
