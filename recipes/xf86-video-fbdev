name=xf86-video-fbdev
from_source=xf86-video-fbdev
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-server xorg-util-macros"

configure() {
        SYSROOT=${sysroot_dir} \
    ${source_dir}/configure \
        --host=x86_64-vinix \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --disable-pciaccess
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
