name=xorg-util-macros
from_source=xorg-util-macros
revision=1
hostdeps="gcc autoconf automake libtool pkg-config xorg-macros"
deps="mlibc"

build() {
    ${source_dir}/configure \
        --host=x86_64-vinix \
        --prefix=${prefix}  \
        --sysconfdir=/etc

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
