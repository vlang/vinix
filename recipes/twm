name=twm
revision=1
from_source=twm
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-server xsetroot"

build() {
    ${source_dir}/configure \
        --host=x86_64-vinix \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var

    make -j${parallelism}
}

package() {
    make DESTDIR=${dest_dir} install-strip
}
