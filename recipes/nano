name=nano
from_source=nano
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc ncurses libintl"

build() {
    ${source_dir}/configure    \
        --host=x86_64-vinix    \
        --prefix=${prefix}     \
        --sysconfdir=/etc      \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
