name=libiconv
from_source=libiconv
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc libgcc libstdc++"
imagedeps="binutils"

build() {
    ${source_dir}/configure           \
        --host=${OS_TRIPLET}           \
        --prefix=${prefix}            \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static              \
        --enable-shared               \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
