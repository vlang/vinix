name=libiconv
from_source=libiconv
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc-base"
imagedeps="binutils"

build() {
    ${source_dir}/configure           \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --disable-static              \
        --enable-shared               \
        --disable-nls

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
