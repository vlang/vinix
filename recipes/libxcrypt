name=libxcrypt
from_source=libxcrypt
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc libgcc libstdc++"
imagedeps="python-passlib"

build() {
    autotools_configure \
        --enable-obsolete-api=yes \
        --disable-xcrypt-compat-files

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install

    post_package_strip
}
