name=libxml
from_source=libxml
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc zlib"

build() {
    ${source_dir}/configure \
        --host=x86_64-vinix \
        --prefix=${prefix} \
        --disable-static \
        --without-threads \
        --disable-ipv6

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
