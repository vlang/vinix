name=frigg
from_source=frigg
revision=1
imagedeps="meson ninja git base-devel"

build() {
    meson setup \
        --prefix=${prefix} \
        --libdir=lib \
        --includedir=share/frigg/include \
        --buildtype=debugoptimized \
        -Dbuild_tests=disabled \
        ${source_dir}

    ninja
}

package() {
    DESTDIR="${dest_dir}" ninja install
}
