name=libexpat
from_source=libexpat
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc"

configure() {
    ${source_dir}/expat/configure     \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --disable-static              \
        --without-xmlwf
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
