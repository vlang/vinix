name=libfontenc
from_source=libfontenc
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-util-macros xorg-proto libx11 libxtrans xorg-font-util zlib"

configure() {
    ${source_dir}/configure           \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var          \
        --disable-static
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
