name=nasm
from_source=nasm
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc"

build() {
    cp -r "${source_dir}"/. .
    libtoolize -cfvi && autoreconf -fvi -I$(realpath ./autoconf)

    ./configure \
        --host=x86_64-vinix \
        --prefix=${prefix}

    make
}

package() {
    make strip
    DESTDIR="${dest_dir}" make install
}
