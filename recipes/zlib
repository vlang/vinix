name=zlib
from_source=zlib
revision=1
hostdeps="gcc pkg-config"
deps="mlibc"

build() {
        prefix="${prefix}" \
        CHOST="x86_64-vinix" \
    ${source_dir}/configure

    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install
    # Remove static libraries
    rm -rf "${dest_dir}${prefix}"/lib/*.a
}
