name=xorg-proto
from_source=xorg-proto
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc"

build() {
    ${source_dir}/configure  \
        --host=x86_64-vinix  \
        --prefix=${prefix}   \
        --sysconfdir=/etc    \
        --localstatedir=/var

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
