name=xsetroot
revision=1
from_source=xsetroot
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-server libxmu xbitmaps libxcursor"

build() {
    ${source_dir}/configure --prefix=${prefix} --host=x86_64-vinix

    make -j${parallelism}
}

package() {
    make DESTDIR=${dest_dir} install
}
