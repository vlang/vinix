name=fontconfig
from_source=fontconfig
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="core-libs freetype libexpat libxml"
imagedeps="python gperf"

build() {
    ${source_dir}/configure \
        --host=x86_64-vinix \
        --prefix=${prefix} \
        --sysconfdir=/etc \
        --localstatedir=/var \
        --disable-static \
        --disable-docs \
        --disable-nls \
        --enable-libxml2

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
