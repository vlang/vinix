name=coreutils
from_source=coreutils
revision=1
hostdeps="gcc automake autoconf libtool pkg-config"
deps="mlibc tzdata"
imagedeps="gcc gperf"

configure() {
    cp -r "${source_dir}"/. ./

    libtoolize -cfvi && autoreconf -fvi

        CFLAGS="-DSLOW_BUT_NO_HACKS $CFLAGS" \
    ./configure    \
        --host=x86_64-vinix    \
        --prefix=${prefix}     \
        --disable-nls
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
