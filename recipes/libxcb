name=libxcb
from_source=libxcb
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc xorg-util-macros xorg-proto libxau libxdmcp xcb-proto"
imagedeps="python"

build() {
    ${source_dir}/configure           \
        --host=x86_64-vinix           \
        --prefix=${prefix}            \
        --sysconfdir=/etc             \
        --localstatedir=/var          \
        --disable-static              \
        --with-sysroot=${sysroot_dir}

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
