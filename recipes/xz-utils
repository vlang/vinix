name=xz-utils
from_source=xz-utils
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
deps="mlibc zlib"

build() {
    ${source_dir}/configure           \
        --host=${OS_TRIPLET}          \
        --prefix=${prefix}            \
        --disable-static

    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
