name=binutils
from_source=binutils
revision=1
imagedeps="gcc"
hostdeps="autoconf automake libtool pkg-config"

configure() {
    "${source_dir}"/configure \
        --prefix="${prefix}" \
        --target=x86_64-vinix \
        --with-sysroot="${sysroot_dir}" \
        --disable-nls \
        --disable-werror \
        --disable-dependency-tracking
}

build() {
    make -j${parallelism} all
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
