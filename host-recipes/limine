name=limine
from_source=limine
revision=1
hostdeps="gcc"
imagedeps="nasm gcc mtools"

configure() {
    "${source_dir}"/configure CFLAGS="${common_cflags}" CXXFLAGS="${common_cflags}" --prefix="${prefix}" TOOLCHAIN=x86_64-vinix LDFLAGS="-static"
}

build() {
    make -j${parallelism}
}

install() {
    DESTDIR="${dest_dir}" make install-strip
}
