name=limine
from_source=limine
revision=1
hostdeps="gcc autoconf automake libtool pkg-config"
imagedeps="nasm gcc mtools"

build() {
    "${source_dir}"/configure \
        --prefix="${prefix}" \
        CROSS_TOOLCHAIN=x86_64-vinix \
        LDFLAGS="-static" \
        --enable-all \
        --disable-uefi-aarch64
    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install-strip
}
