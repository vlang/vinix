name=cmake
from_source=cmake
revision=1
imagedeps="gcc"

build() {
    "${source_dir}"/configure --prefix="${prefix}" --parallel="${parallelism}"}


    make -j${parallelism}
}

package() {
    DESTDIR="${dest_dir}" make install
    echo 'include(Platform/UnixPaths)' > "${dest_dir}${prefix}/share/cmake-3.24/Modules/Platform/Vinix.cmake"
}
